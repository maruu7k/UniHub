

<div class="container rounded bg-white mt-5 mb-5">
  <div class="row">
    <div class="col-md-3 border-right">
    </div>
    <div class="col-md-6 border-right">
      <div class="p-3 py-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-center">Contact Us</h4>
        </div>
        <%= form_with url: new_contact_path do |f| %>
          <div class="row mt-3">
            <div class="col-md-12">
              <%= f.label :name %>
              <%= f.text_field :name, required: true, autocomplete: "name", class: "form-control", placeholder: "Name" %>
            </div>
          </div><br />

          <div class="row mt-3">
            <div class="col-md-12">
              <%= f.label :email %>
              <%= f.text_field :email, required: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
            </div>
          </div><br />

          <div class="row mt-3">
            <div class="col-md-12">
              <%= f.label :message %>
              <%= f.text_field :message, required: true, autocomplete: "message", class: "form-control", placeholder: "Message" %>
            </div>
          </div><br />
          
          <%= f.submit "Contact", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>